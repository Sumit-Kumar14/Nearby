<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/places_detail_name"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#006a79"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/places_detail_phone_desc"
                android:text="Phone"
                android:textColor="#555"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="30dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/places_detail_phone_detail"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#006a79"
                android:gravity="end"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/places_detail_int_phone_desc"
                android:text="International Phone"
                android:textColor="#555"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="30dp"
                android:scaleType="center"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/places_detail_int_phone_detail"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#006a79"
                android:gravity="end"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/places_detail_rating_desc"
                android:text="Rating"
                android:textColor="#555"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="30dp"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical|right"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_star_black_18dp"
                        android:layout_marginRight="3dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="10dp"
                        android:text="5"
                        android:layout_marginRight="3dp"
                        android:gravity="top" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="10dp"
                        android:id="@+id/rating_5"
                        android:background="@android:color/holo_green_dark"
                        android:layout_marginBottom="5dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/rating_5t"
                        android:textSize="10dp"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_star_black_18dp"
                        android:layout_marginRight="3dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="10dp"
                        android:text="4"
                        android:layout_marginRight="3dp"
                        android:gravity="top" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="10dp"
                        android:id="@+id/rating_4"
                        android:background="@android:color/holo_green_light"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/rating_4t"
                        android:textSize="10dp"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_star_black_18dp"
                        android:layout_marginRight="3dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="10dp"
                        android:text="3"
                        android:layout_marginRight="3dp"
                        android:gravity="top" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="10dp"
                        android:id="@+id/rating_3"
                        android:background="@android:color/holo_orange_light"
                        android:layout_marginBottom="5dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/rating_3t"
                        android:textSize="10dp"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_star_black_18dp"
                        android:layout_marginRight="3dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="10dp"
                        android:text="2"
                        android:layout_marginRight="3dp"
                        android:gravity="top" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="10dp"
                        android:id="@+id/rating_2"
                        android:background="@android:color/holo_orange_dark"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/rating_2t"
                        android:textSize="10dp"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_star_black_18dp"
                        android:layout_marginRight="3dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="10dp"
                        android:text="1"
                        android:layout_marginRight="3dp"
                        android:gravity="top" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="10dp"
                        android:id="@+id/rating_1"
                        android:background="@android:color/holo_red_light"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/rating_1t"
                        android:textSize="10dp"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/places_detail_address_desc"
                android:text="Address"
                android:textColor="#555"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="30dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/places_detail_address_detail"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#006a79"
                android:gravity="end"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="10dp"/>
    </LinearLayout>
</ScrollView>